<Window x:Class="WpfApp36.SettingSanLuong"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfApp36"
        mc:Ignorable="d"
        Title="SettingSanLuong" Height="450" Width="800" WindowStartupLocation="CenterScreen">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        <Grid Background="Gray">
            <TextBlock Text="Manager Setting Resul" FontSize="50" VerticalAlignment="Center"  HorizontalAlignment="Center"/>
        </Grid>
       
        <Grid Grid.Row="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition/>
                <ColumnDefinition Width="396"/>
            </Grid.ColumnDefinitions>
            <TextBox Text="0" FontSize="100" Name="TbMain" TextAlignment="Center"  Width="400" Height="190"  />
            <Button Content="SET" Name="set" Click="set_Click" Grid.Column="1" FontSize="40" Margin="20"/>
        </Grid>
        <Button Content="CLOSE" Name="close" Click="close_Click" Grid.Row="2" HorizontalAlignment="Right" FontSize="20"/>
    </Grid>
</Window>
